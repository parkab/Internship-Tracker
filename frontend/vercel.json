{
    "version": 2,
    "builds": [
      {
        "src": "src/main.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "src/**"
          ],
          "engine": "14"
        }
      },
      {
        "src": "src/main.server.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "src/**"
          ],
          "engine": "14"
        }
      },
      {
        "src": "dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/src/index.html"
      }
    ]
  }